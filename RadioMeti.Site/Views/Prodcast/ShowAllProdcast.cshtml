@using RadioMeti.Application.Utilities.Utils
@using RadioMeti.Domain.Entities.Prodcast
@model List<Prodcast>
@{
    ViewData["Title"] = " All-Prodcast";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
 <div id="playlists" class="mainContent">
<div class="sectionTitle">
    <h2 class="title">All Prodcasts</h2>
</div>

<div class="grid">
    @if (Model != null && Model.Any())
    {
        foreach (var item in Model)
        {
              <a asp-area="" asp-controller="Prodcast" asp-action="ShowProdcast"  asp-route-id="@item.Id" class="play_all">
        <img src="@(PathExtension.CoverProdcastThumbPath+item.Cover)" data-src="@(PathExtension.CoverProdcastThumbPath+item.Cover)" alt="Ghofli'" class=" lazyloaded">
        <div class="songInfo">
            <span class="playlistName" title="Ghofli">@item.Title</span>
        </div>
    </a>
        }
    }
   
</div>
</div>

