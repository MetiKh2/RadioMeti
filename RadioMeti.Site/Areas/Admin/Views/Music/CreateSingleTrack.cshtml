@using RadioMeti.Application.DTOs.Admin.Music.Single.Create
@using RadioMeti.Domain.Entities.Music
@model CreateSingleTrackDto
@{
    ViewData["Title"] = "Create Single Track";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    string title = "Create Single Track";
    List<Artist> artists = ViewBag.Artists;
}
@section Scripts{
<partial name="_JqueryValidator" />
<partial name="_CaptchaScripts" />
}
<partial name="_AdminTitle" model="title" />

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Informations
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <form id="filter-form" asp-area="Admin" asp-controller="Music" asp-action="CreateSingleTrack" method="post" enctype="multipart/form-data">
                        <partial name="_CaptchaInput" />
                        <div class="form-group">
                            <label>Title</label>
                            <input asp-for="Title" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Arrangement</label>
                            <input asp-for="Arrangement" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>CoverArtist</label>
                            <input asp-for="CoverArtist" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Lyrics</label>
                            <textarea asp-for="Lyrics" class="form-control"></textarea>
                        </div>
                        <div class="form-group">
                            <label>MusicProducer</label>
                            <input asp-for="MusicProducer" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Photographer</label>
                            <input asp-for="Photographer" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Poet</label>
                            <input asp-for="Poet" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Tags(/)</label>
                            <input asp-for="Tags" class="form-control">
                        </div>
                        <div class="checkbox">
                            <label>
                                <input asp-for="IsSlider">
                                IsSlider?
                            </label>
                        </div>
                        <div class="form-group">
                            <label>Cover</label>
                            <input type="file" name="cover" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Audio</label>
                            <input type="file" name="audio" accept="audio" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Artists</label>
                            <div class="searchable-select">
                         <select style="display:none" class="form-control " multiple name="artistsId">
                                @foreach (var item in artists)
                                {
                                    <option value="@item.Id">@item.FullName</option>
                                }
                            </select>
                            </div>
                        </div>

                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-info text-white w-100">Submit</button>
                        </div>
                    </form>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
    <!-- /.col-lg-12 -->
</div>





