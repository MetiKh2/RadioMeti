@model RadioMeti.Application.DTOs.Admin.Artists.Create.CreateArtistDto
@{
    ViewData["Title"] = "Create Artist";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    string title = "Create User";
}
@section Scripts{
    <partial name="_JqueryValidator"/>
    <partial name="_CaptchaScripts"/>
}
<partial name="_AdminTitle" model="title" />

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Informations
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <form id="filter-form" asp-area="Admin" asp-controller="Artist" asp-action="CreateArtist" method="post" enctype="multipart/form-data">
                             <partial name="_CaptchaInput" />
                        <div class="form-group">
                            <label>User Name</label>
                            <input asp-for="FullName" class="form-control">
                        </div>  
                        <div class="checkbox">
                            <label>
                            <input asp-for="IsPopular">
                            IsPopular?
                            </label>
                        </div>  
                        <div class="form-group">
                            <label>Image</label>
                            <input type="file" name="image" class="form-control">
                        </div>  
                        <div class="form-group">
                            <label>Avatar</label>
                            <input type="file" name="avatar" class="form-control">
                        </div> 
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                        <button type="submit" class="btn btn-info text-white w-100">Submit</button>
                        </div>
                    </form>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
    <!-- /.col-lg-12 -->
</div>



