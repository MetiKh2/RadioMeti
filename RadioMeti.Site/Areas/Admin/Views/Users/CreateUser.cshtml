@model RadioMeti.Application.DTOs.Admin.Users.Create.CreateUserDto
@{
    ViewData["Title"] = "Create User";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    string title = "Create User";
}
@section Scripts{
    <partial name="_JqueryValidator"/>
    <partial name="_CaptchaScripts"/>
}
<partial name="_AdminTitle" model="title" />

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Informations
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <form id="filter-form" asp-area="Admin" asp-controller="Users" asp-action="CreateUser" method="post">
                             <partial name="_CaptchaInput" />
                        <div class="form-group">
                            <label>User Name</label>
                            <input asp-for="UserName" class="form-control">
                        </div>  
                        <div class="form-group">
                            <label>Email</label>
                            <input asp-for="Email" class="form-control">
                        </div>  
                        <div class="form-group">
                            <label>Password</label>
                            <input asp-for="Password" class="form-control">
                        </div> 
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                        <button type="submit" class="btn btn-info text-white w-100">Submit</button>
                        </div>
                    </form>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
    <!-- /.col-lg-12 -->
</div>
